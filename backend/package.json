{
  "name": "bookmatch-backend",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "start:prod": "npm run prisma:generate && npm run prisma:migrate:deploy && node dist/main.js"
  },
  "dependencies": {
    "@fastify/jwt": "^8.0.0",
    "@prisma/client": "latest",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.0.0",
    "fastify": "^4.25.0",
    "fastify-jwt": "^4.1.3",
    "fastify-multipart": "^5.3.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.2",
    "@types/uuid": "^10.0.0",
    "prisma": "latest",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
